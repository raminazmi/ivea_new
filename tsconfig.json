{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "noEmit": true,
        "baseUrl": "./resources/js",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "vite/client",
            "node"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "resources/js/**/*"
    ]
}